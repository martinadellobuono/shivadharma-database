  <!-- apparatus -->
  <button type="button" class="btn-close float-end" aria-label="Close" data-bs-toggle="modal" data-bs-target="#cancel-app" data-type="cancel-annotation"></button>
  <h3 class="h6">Apparatus entry</h3>
  <ul class="nav nav-tabs" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#annotate-app" type="button" role="tab" aria-controls="annotate" aria-selected="true">Annotate</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" data-bs-toggle="tab" data-bs-target="#check-app" type="button" role="tab" aria-controls="check" aria-selected="false">Check all</button>
    </li>
    <!-- cancel -->
    <button type="button" class="btn btn-sm btn-pink" data-bs-toggle="modal" data-bs-target="#cancel-app" data-type="cancel-annotation">
      <i class="bi bi-eraser-fill"></i> Cancel
    </button>
    <div class="modal fade" id="cancel-app" data-role="cancel-annotation" tabindex="-1" aria-labelledby="cancel-annotation" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Are you sure to cancel this annotation?</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <p>Please type <b>martinadellobuono</b> to confirm.</p>
            <input type="text" class="form-control" data-role="safe-deletion">
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary" data-role="safe-deletion-btn" disabled>Save changes</button>
          </div>
        </div>
      </div>
    </div>
  </ul>
  <div class="tab-content">
    <!-- ANNOTATE -->
    <div class="tab-pane fade show active" id="annotate-app" role="tabpanel" aria-labelledby="annotate-tab">
      <!-- error handling -->
      <% if (typeof errors !== "undefined") { %>
      <% if (errors.length == 0) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <p>Data saved!</p>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
      <% } else { %>
      <% errors.forEach((error) => { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <p>Please insert the <strong><%= error.msg %></strong>.</p>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
      <% }); %>
      <% }; %>
      <% }; %>
      <!-- apparatus form -->
      <div class="annotation-form apparatus d-none scroll-tab">
        <form class="form-annotations" id="apparatus-req" method="post" action="/addApparatus/<%= id %>">
          <!-- selected fragment -->
          <div class="mb-3 mt-3">
            <label class="form-label">Selected fragment</label>
            <input class="form-control" type="text" aria-describedby="Selected fragment" readonly="true" data-value="apparatus" name="selectedFragment">
          </div>
          <!-- stanza / pada -->
          <div class="bg-white p-3 mb-3">
            <label class="form-label">Stanza</label>
            <input type="number" min="1" class="form-control live-check mb-3" placeholder="Insert stanza" aria-describedby="Insert stanza" name="stanza">
            <label class="form-label">PƒÅda</label>
            <div class="form-check form-check-inline">
              <input class="form-check-input live-check" type="checkbox" value="a" name="pada">
              <label class="form-check-label">a</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input live-check" type="checkbox" value="b" name="pada">
              <label class="form-check-label">b</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input live-check" type="checkbox" value="c" name="pada">
              <label class="form-check-label">c</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input live-check" type="checkbox" value="d" name="pada">
              <label class="form-check-label">d</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input live-check" type="checkbox" value="e" name="pada">
              <label class="form-check-label">e</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input live-check" type="checkbox" value="f" name="pada">
              <label class="form-check-label">f</label>
            </div>
          </div>
          <!-- lemma -->
          <div class="bg-white p-3 mb-3">
            <label class="form-label">Lemma</label>
            <!-- present or omitted -->
            <div class="mb-3">
              <div class="form-check">
                <input class="form-check-input check-presence" type="radio" data-subtype="lemma-presence" data-value="lemma-present" data-omission="lemma" name="lemmaPresence" checked>
                <label class="form-check-label">Present</label>
              </div>
              <div class="form-check">
                <input class="form-check-input check-presence" type="radio" data-subtype="lemma-presence" data-value="lemma-omission" data-href="lemmaOmission" data-omission="lemma" name="lemmaPresence">
                <label class="form-check-label">Omitted</label>
              </div>
            </div>
            <!-- truncation -->
            <div class="p-3 pb-1 bg-light" data-subtype="lemma" data-workflow="lemma-present">
              <div class="mb-3">
                <div class="mb-2">
                  <span class="fs-6 text-secondary">Truncation</span>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" data-subtype="truncation" data-href="lemma" data-value="circlefront" name="lemma-radios">
                  <label class="form-check-label">Circlefront</label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" data-subtype="truncation" data-href="lemma" data-value="circleback" name="lemma-radios">
                  <label class="form-check-label">Circleback</label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" data-subtype="truncation" data-href="lemma" data-value="circlearound" name="lemma-radios">
                  <label class="form-check-label">Circlearound</label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" data-subtype="truncation" data-href="lemma" data-value="notruncation" name="lemma-radios" checked>
                  <label class="form-check-label">No truncation</label>
                </div>
                <!-- lemma -->
                <input class="form-control live-check mb-0 mt-3" type="text" data-subtype="truncation" placeholder="Insert lemma" aria-describedby="Insert lemma" name="lemma">
              </div>
            </div>
            <!-- witnesses -->
            <div class="p-3 bg-light">
              <label class="form-label">Witness&#x28;es&#x29;</label>
              <% if (sigla) { %>
              <% var wits = []; %>
              <% sigla.forEach((siglum) => { %>
              <% if (wits.includes(siglum) === false) { %>
              <% wits.push(siglum) %>
              <% }; %>
              <% }); %>
              <input class="form-control live-check" id="witsLemma" data-list="<%= JSON.stringify(wits) %>" data-type="witness" type="search" dir="ltr" spellcheck="false" autocorrect="off" autocomplete="off" autocapitalize="off" maxlength="2048" tabindex="1" name="manuscriptLemma">
              <% }; %>
            </div>
            <!-- omission -->
            <div class="p-3 bg-light d-none" data-subtype="lemma" data-workflow="lemma-omission">
              <div class="textarea-container">
                <div class="mb-2">
                  <span class="fs-6 text-secondary">Additional notes on the omission</span>
                </div>
                <div>
                  <textarea class="mt-1" placeholder="Insert additional notes..." name="lemmaOmission" id="lemmaOmissionEditor"></textarea>
                </div>
              </div>
            </div>
          </div>
          <!-- variants -->
          <div class="alert alert-primary alert-dismissible fade show bg-white p-3 mb-3" data-cloned="variant">
            <label class="form-label">Variant</label>

            <!-- try -->
            <!-- present or omitted -->
            <div class="mb-3">
              <div class="form-check">
                <input class="form-check-input check-presence" type="radio" data-subtype="variant-presence" data-value="variant-present" name="variantPresence" checked>
                <label class="form-check-label">Present</label>
              </div>
              <div class="form-check">
                <input class="form-check-input check-presence" type="radio" data-subtype="variant-presence" data-value="variant-omission" data-href="variantOmission" data-omission="variant0" name="variantPresence">
                <label class="form-check-label">Omitted</label>
              </div>
            </div>
            <!-- / -->

            <!-- truncation -->
            <div class="p-3 pb-1 bg-light" data-subtype="variant" data-workflow="variant-present">
              <div class="mb-3">
                <div class="mb-2">
                  <span class="fs-6 text-secondary">Truncation</span>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" data-subtype="truncation" data-href="variant0" data-value="circlefront" name="truncation-radios">
                  <label class="form-check-label">Circlefront</label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" data-subtype="truncation" data-href="variant0" data-value="circleback" name="truncation-radios">
                  <label class="form-check-label">Circleback</label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" data-subtype="truncation" data-href="variant0" data-value="circlearound" name="truncation-radios">
                  <label class="form-check-label">Circlearound</label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" data-subtype="truncation" data-href="variant0" data-value="notruncation" name="truncation-radios" checked>
                  <label class="form-check-label">No truncation</label>
                </div>
                <!-- variant -->
                <input class="form-control live-check mb-0 mt-3" type="text" placeholder="Insert variant" aria-describedby="Insert variant" name="variant0">
              </div>
            </div>
            <!-- witnesses -->
            <div class="p-3 bg-light">
              <label class="form-label">Witness&#x28;es&#x29;</label>
              <% if (sigla) { %>
              <% var wits = []; %>
              <% sigla.forEach((siglum) => { %>
              <% if (wits.includes(siglum) === false) { %>
              <% wits.push(siglum) %>
              <% }; %>
              <% }); %>
              <input class="form-control live-check" id="witsVariant" data-list="<%= JSON.stringify(wits) %>" data-type="witness" type="search" dir="ltr" spellcheck="false" autocorrect="off" autocomplete="off" autocapitalize="off" maxlength="2048" tabindex="1" name="manuscriptVariant0">
              <% }; %>
            </div>
            <!-- omission -->
            <div class="p-3 bg-light d-none" data-subtype="variant" data-workflow="variant-omission">
              <div class="textarea-container">
                <div class="mb-2">
                  <span class="fs-6 text-secondary">Additional notes on the omission</span>
                </div>
                <div>
                  <textarea class="mt-1" placeholder="Insert additional notes..." name="variantOmission" id="variantOmissionEditor"></textarea>
                </div>
              </div>
            </div>
          </div>
          <div id="variant">
          </div>
          <!-- add variant -->
          <div class="mb-3">
            <button type="button" class="btn btn-primary" data-clone="variant">&#x2b;</button>
          </div>
          <!-- submit -->
          <div>
            <button type="submit" class="btn btn-primary">Save</button>
          </div>
        </form>
      </div>
      <!-- live check apparatus -->
      <%- include ("partials/forms-live-check/apparatus") %>
    </div>
    <!-- CHECK -->
    <div class="tab-pane fade" id="check-app" role="tabpanel" aria-labelledby="check-tab">
      <h2 class="mt-3 h5" id="check-annotation"></h2>
      <!-- results apparatus -->
      <div class="scroll-tab" id="apparatus-res">
        <%- include ("partials/forms-res/apparatus") %>
      </div>
    </div>
  </div>