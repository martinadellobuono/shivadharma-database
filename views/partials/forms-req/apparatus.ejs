<h2 class="mt-3 h5">Create an apparatus entry</h2>
<form class="form-annotations" id="apparatus-req" method="post" action="/addApparatus/<%= id %>">
  <!-- selected fragment -->
  <div class="mb-3">
    <label class="form-label">Selected fragment</label>
    <input id="selected-fragment" type="text" class="form-control" aria-describedby="Selected fragment" name="selectedFragment">
  </div>
  <!-- stanza / pada -->
  <div class="bg-white p-3 mb-3">
    <label class="form-label">Stanza</label>
    <input type="number" min="1" class="form-control mb-3" placeholder="Insert stanza" aria-describedby="Insert stanza" name="stanza">
    <label class="form-label">PÄda</label>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="checkbox" value="a" name="pada">
      <label class="form-check-label">a</label>
    </div>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="checkbox" value="b" name="pada">
      <label class="form-check-label">b</label>
    </div>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="checkbox" value="c" name="pada">
      <label class="form-check-label">c</label>
    </div>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="checkbox" value="d" name="pada">
      <label class="form-check-label">d</label>
    </div>
  </div>
  <!-- lemma -->
  <div class="bg-white p-3 mb-3">
    <label class="form-label">Lemma</label>
    <input type="text" class="form-control mb-3" placeholder="Insert lemma" aria-describedby="Insert lemma" name="lemma">
    <label class="form-label">Manuscript</label>
    <input type="text" class="flexdatalist form-control" data-min-length="0" placeholder="Insert a siglum..." aria-describedby="Insert a siglum" data-min-length="1" multiple="multiple" list="manuscriptLemmaList" name="manuscriptLemma">
    <datalist id="manuscriptLemmaList">
      <% if (sigla) { %>
      <% sigla.forEach((siglum) => { %>
      <option value="<% siglum %>"><%= siglum %></option>
      <% }); %>
      <% }; %>
    </datalist>
  </div>
  <!-- variants -->
  <div class="bg-white p-3 mb-3">
    <label class="form-label">Variant</label>
    <input type="text" class="form-control mb-3" placeholder="Insert variant" aria-describedby="Insert lemma" name="variant">
    <label class="form-label">Manuscript</label>
    <input type="text" class="flexdatalist form-control" data-min-length="0" placeholder="Insert a siglum..." aria-describedby="Insert a siglum" data-min-length="1" multiple="multiple" list="manuscriptVariantList" name="manuscriptVariant">
    <datalist id="manuscriptVariantList">
      <% if (sigla) { %>
      <% sigla.forEach((siglum) => { %>
      <option value="<% siglum %>"><%= siglum %></option>
      <% }); %>
      <% }; %>
    </datalist>
  </div>
  <!-- add variant -->
  <div class="mb-3">
    <button type="button" class="btn btn-primary">&#x2b;</button>
  </div>
  <!-- submit -->
  <div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </div>
</form>