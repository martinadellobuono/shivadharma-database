<ul class="nav nav-tabs fs-xs" role="tablist">
  <!-- annotate -->
  <li class="nav-item" role="presentation">
    <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#annotate-citation" type="button" role="tab" aria-controls="annotate" aria-selected="true">Annotate</button>
  </li>
  <!-- check -->
  <li class="nav-item" role="presentation">
    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#check-citation" type="button" role="tab" aria-controls="check" aria-selected="false">Check all</button>
  </li>
</ul>
<div class="tab-content fs-xs">
  <!-- ANNOTATE -->
  <div class="tab-pane fade show active scroll-tab" id="annotate-citation" role="tabpanel" aria-labelledby="annotate-tab">
    <!-- no selected fragment alert -->
    <div class="alert alert-warning fade show mt-3 d-none" role="alert">
      <p><b>No selected fragment</b>. Highlight the fragment in the text you want to annotate, then click.</p>
    </div>
    <!-- form to add citation -->
    <form class="form-annotations citation-container" id="citation-req" method="post" action="<%= process.env.URL_PATH %>/addCitation/<%= id %>">
      <!-- ID -->
      <div class="d-none">
        <label class="form-label">ID of annotation</label>
        <input class="form-control cursor-not-allowed root-id-input" type="text" aria-describedby="ID of annotation" readonly="true" data-value="citation" name="idAnnotation">
      </div>
      <!-- selected fragment -->
      <div class="mb-3 mt-3">
        <label class="form-label">Selected fragment</label>
        <input class="form-control cursor-not-allowed" type="text" aria-describedby="Selected fragment" readonly="true" data-value="citation" name="selectedFragment">
      </div>
      <!-- location -->
      <div class="location bg-white p-3 mb-3">
        <!-- chapter -->
        <div class="mb-3">
          <label class="form-label">Chapter</label>
          <input class="form-control" type="number" aria-describedby="Chapter" placeholder="Insert the number of chapter" name="chapter">
        </div>
        <!-- stanza / pada -->
        <label class="form-label">Stanza/paragraph</label>
        <div class="mb-3">
          <div class="form-text">If you refer to only one stanza/paragraph, fill the starting stanza/paragraph and p훮da&#x28;s&#x29; form, then the ending stanza/paragraph and p훮da&#x28;s&#x29; with the values of the starting ones.</div>
        </div>
        <div class="input-group mb-3">
          <span class="input-group-text">Starting stanza/paragraph</span>
          <input type="number" min="1" class="form-control live-check" placeholder="Insert stanza/paragraph" aria-describedby="Insert stanza/paragraph" name="stanzaStart" required>
        </div>
        <div class="mb-3">
          <label class="form-label">P훮da</label>
          <div class="form-check form-check-inline">
            <input class="form-check-input live-check" type="checkbox" value="a" name="padaStart">
            <label class="form-check-label">a</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input live-check" type="checkbox" value="b" name="padaStart">
            <label class="form-check-label">b</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input live-check" type="checkbox" value="c" name="padaStart">
            <label class="form-check-label">c</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input live-check" type="checkbox" value="d" name="padaStart">
            <label class="form-check-label">d</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input live-check" type="checkbox" value="e" name="padaStart">
            <label class="form-check-label">e</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input live-check" type="checkbox" value="f" name="padaStart">
            <label class="form-check-label">f</label>
          </div>
        </div>
        <div class="input-group mb-3">
          <span class="input-group-text">Ending stanza/paragraph</span>
          <input type="number" min="1" class="form-control live-check" placeholder="Insert stanza/paragraph" aria-describedby="Insert stanza/paragraph" name="stanzaEnd">
        </div>
        <div class="mb-3">
          <label class="form-label">P훮da</label>
          <div class="form-check form-check-inline">
            <input class="form-check-input live-check" type="checkbox" value="a" name="padaEnd">
            <label class="form-check-label">a</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input live-check" type="checkbox" value="b" name="padaEnd">
            <label class="form-check-label">b</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input live-check" type="checkbox" value="c" name="padaEnd">
            <label class="form-check-label">c</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input live-check" type="checkbox" value="d" name="padaEnd">
            <label class="form-check-label">d</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input live-check" type="checkbox" value="e" name="padaEnd">
            <label class="form-check-label">e</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input live-check" type="checkbox" value="f" name="padaEnd">
            <label class="form-check-label">f</label>
          </div>
        </div>
      </div>
      <!-- type of citation -->
      <div class="mb-3">
        <label class="form-label">Type of citation</label>
        <div class="form-check">
          <input class="form-check-input" type="radio" value="deity" name="citationType" checked>
          <label class="form-check-label">
            Date
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" value="deity" name="citationType">
          <label class="form-check-label">
            Deity
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" value="person" name="citationType">
          <label class="form-check-label">
            Person
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" value="place" name="citationType">
          <label class="form-check-label">
            Place
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" value="text" name="citationType">
          <label class="form-check-label">
            Text
          </label>
        </div>
        <div class="form-check">
          <div class="col-auto">
            <input class="form-check-input" type="radio" value="other" name="citationType">
            <label class="form-check-label">Other</label>
          </div>
          <div class="col-auto">
            <input type="text" class="form-control" name="citationType">
          </div>
        </div>
      </div>
      <!-- citation -->
      <div class="mb-3">
        <label class="form-label">Note on citation</label>
        <div class="mb-3">
          <div class="form-text">Please, do not insert the number of chapter and number of stanza/paragraph at the beginning of the citation. They will be added automatically.</div>
        </div>
        <textarea placeholder="Insert the note on the citation..." name="noteCitation"></textarea>
      </div>
      <!-- submit -->
      <div>
        <button type="submit" class="btn btn-fuchsia">Save</button>
      </div>
    </form>
  </div>
  <!-- CHECK -->
  <div class="tab-pane fade" id="check-citation" role="tabpanel" aria-labelledby="check-tab">
    <h2 class="mt-3 h5" id="check-annotation"></h2>
    <!-- results citation -->
    <div class="scroll-tab" id="citation-res">
      <%- include ("partials/forms-res/citation") %>
    </div>
  </div>
</div>