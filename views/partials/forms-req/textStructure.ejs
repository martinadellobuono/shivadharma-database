<!-- cancel annotations -->
<button type="button" class="btn-close-annotation btn-close float-end" aria-label="Close" data-bs-toggle="modal" data-bs-target="#cancel-textStructure" data-type="cancel-annotation"></button>
<div class="modal fade" id="cancel-textStructure" data-role="cancel-annotation" tabindex="-1" aria-labelledby="cancel-textStructure" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Are you sure to cancel this annotation?</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Please type <b>cancel-annotation</b> to confirm.</p>
        <input type="text" class="form-control" data-role="safe-deletion">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" data-role="safe-deletion-btn" disabled>Save changes</button>
      </div>
    </div>
  </div>
</div>
<!-- text structure -->
<h3 class="h6">Text structure</h3>
<ul class="nav nav-tabs fs-xs" role="tablist">
  <!-- annotate -->
  <li class="nav-item" role="presentation">
    <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#annotate-textStructure" type="button" role="tab" aria-controls="annotate" aria-selected="true">Annotate</button>
  </li>
  <!-- check -->
  <li class="nav-item" role="presentation">
    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#check-textStructure" type="button" role="tab" aria-controls="check" aria-selected="false">Check all</button>
  </li>
</ul>
<div class="tab-content fs-xs">
  <!-- ANNOTATE -->
  <div class="tab-pane fade show active scroll-tab" id="annotate-textStructure" role="tabpanel" aria-labelledby="annotate-tab">
    <!-- no selected fragment alert -->
    <div class="alert alert-warning fade show mt-3 d-none" role="alert">
      <p><b>No selected fragment</b>. Highlight the fragment in the text you want to annotate, then click.</p>
    </div>
    <!-- form to add structure -->
    <form class="form-annotations textarea-container" id="textStructure-req" method="post" action="/addTextStructure/<%= id %>">
      <!-- ID -->
      <div class="d-none">
        <label class="form-label">ID of annotation</label>
        <input class="form-control cursor-not-allowed root-id-input" type="text" aria-describedby="ID of annotation" readonly="true" data-value="textStructure" name="idAnnotation">
      </div>
      <!-- selected fragment -->
      <div class="mb-3 mt-3">
        <label class="form-label">Selected fragment</label>
        <input class="form-control cursor-not-allowed" type="text" aria-describedby="Selected fragment" readonly="true" data-value="textStructure" name="selectedFragment">
      </div>
      <!-- location -->
      <div class="location bg-white p-3 mb-3">
        <label class="form-label">Stanza/parallel</label>
        <div class="mb-3">
          <div class="form-text">If you refer to only one stanza/paragraph, fill the starting stanza/paragraph and pāda&#x28;s&#x29; form, then the ending stanza/paragraph and pāda&#x28;s&#x29; with the values of the starting ones.</div>
        </div>
        <div class="input-group mb-3">
          <span class="input-group-text">Starting stanza/paragraph</span>
          <input type="number" min="1" class="form-control" placeholder="Insert stanza/paragraph" aria-describedby="Insert stanza/paragraph" name="stanzaStart" required>
        </div>
        <div class="mb-3">
          <label class="form-label">Pāda</label>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" value="a" name="padaStart">
            <label class="form-check-label">a</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" value="b" name="padaStart">
            <label class="form-check-label">b</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" value="c" name="padaStart">
            <label class="form-check-label">c</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" value="d" name="padaStart">
            <label class="form-check-label">d</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" value="e" name="padaStart">
            <label class="form-check-label">e</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" value="f" name="padaStart">
            <label class="form-check-label">f</label>
          </div>
        </div>
        <div class="input-group mb-3">
          <span class="input-group-text">Ending stanza/paragraph</span>
          <input type="number" min="1" class="form-control set-stanza" placeholder="Insert stanza/paragraph" aria-describedby="Insert stanza/paragraph" name="stanzaEnd">
        </div>
        <div class="mb-3">
          <label class="form-label">Pāda</label>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" value="a" name="padaEnd">
            <label class="form-check-label">a</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" value="b" name="padaEnd">
            <label class="form-check-label">b</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" value="c" name="padaEnd">
            <label class="form-check-label">c</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" value="d" name="padaEnd">
            <label class="form-check-label">d</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" value="e" name="padaEnd">
            <label class="form-check-label">e</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" value="f" name="padaEnd">
            <label class="form-check-label">f</label>
          </div>
        </div>
      </div>
      <!-- text structure -->
      <div class="mb-3">
        <label class="form-label">Text structure</label>
        <select class="form-select" aria-label="Select the type of text structure" name="textStructure">
          <option value="Chapter" selected>Chapter</option>
          <option value="Pāda">Pāda</option>
          <option value="Paragraph">Paragraph</option>
          <option value="Stanza">Stanza</option>
        </select>
      </div>
      <!-- submit -->
      <div>
        <button type="submit" class="btn btn-secondary">Save</button>
      </div>
    </form>
  </div>
  <!-- CHECK -->
  <div class="tab-pane fade" id="check-textStructure" role="tabpanel" aria-labelledby="check-tab">
    <h2 class="mt-3 h5" id="check-annotation"></h2>
    <!-- results text structure -->
    <div class="scroll-tab" id="textStructure-res">
      <%- include ("partials/forms-res/textStructure") %>
    </div>
  </div>
</div>