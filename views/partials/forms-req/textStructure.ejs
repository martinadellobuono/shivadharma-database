<!-- cancel annotations -->
<button type="button" class="btn-close float-end" aria-label="Close" data-bs-toggle="modal" data-bs-target="#cancel-textStructure" data-type="cancel-annotation"></button>
<div class="modal fade" id="cancel-textStructure" data-role="cancel-annotation" tabindex="-1" aria-labelledby="cancel-textStructure" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Are you sure to cancel this annotation?</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Please type <b>cancel-annotation</b> to confirm.</p>
        <input type="text" class="form-control" data-role="safe-deletion">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" data-role="safe-deletion-btn" disabled>Save changes</button>
      </div>
    </div>
  </div>
</div>
<!-- text structure -->
<h3 class="h6">Text structure</h3>
<ul class="nav nav-tabs fs-xs" role="tablist">
  <li class="nav-item" role="presentation">
    <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#annotate-textStructure" type="button" role="tab" aria-controls="annotate" aria-selected="true">Annotate</button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#check-textStructure" type="button" role="tab" aria-controls="check" aria-selected="false">Check all</button>
  </li>
</ul>
<div class="tab-content fs-xs">
  <!-- ANNOTATE -->
  <div class="tab-pane fade show active" id="annotate-textStructure" role="tabpanel" aria-labelledby="annotate-tab">
    <!-- textStructure form -->
    <div class="annotation-form textStructure d-none textStructure-scroll scroll-tab">
      <!-- chapter -->
      <form class="form-annotations mb-3" id="textStructure-req" method="post" action="<%= process.env.URL_PATH %>/addChapter/<%= id %>">
        <!-- ID -->
        <div class="d-none">
          <label class="form-label">ID of annotation</label>
          <input class="form-control cursor-not-allowed root-id-input" type="text" aria-describedby="ID of annotation" readonly="true" data-value="textStructure" name="idAnnotation">
        </div>
        <!-- selected fragment -->
        <div class="mb-3 mt-3">
          <label class="form-label">Selected fragment</label>
          <input class="form-control" type="text" aria-describedby="Selected fragment" readonly="true" data-value="textStructure" name="selectedFragment">
        </div>
        <!-- type of structure -->
        <div class="bg-white p-3 mb-3">
          <!-- chapter -->
          <label class="form-label">Chapter</label>
          <input type="number" min="1" class="form-control form-control-sm" aria-describedby="Number of chapter" name="textStructureChapter">
          <div class="form-text">Annotate chapters first.</div>
        </div>
        <!-- submit -->
        <div>
          <button type="submit" class="btn btn-primary">Save</button>
        </div>
      </form>
      <!-- stanza -->
      <form class="form-annotations mb-3" method="post" action="<%= process.env.URL_PATH %>/addStanza/<%= id %>">
        <!-- ID -->
        <div class="d-none">
          <label class="form-label">ID of annotation</label>
          <input class="form-control cursor-not-allowed root-id-input" type="text" aria-describedby="ID of annotation" readonly="true" data-value="textStructure" name="idAnnotation">
        </div>
        <!-- selected fragment -->
        <div class="mb-3 mt-3 d-none">
          <label class="form-label">Selected fragment</label>
          <input class="form-control" type="text" aria-describedby="Selected fragment" readonly="true" data-value="textStructure" name="selectedFragment">
        </div>
        <!-- type of structure -->
        <div class="bg-white p-3 mb-3">
          <!-- chapter -->
          <div class="mb-3">
            <label class="form-label">Stanza</label>
            <input type="number" min="1" class="form-control form-control-sm related-available-chapters" aria-describedby="Number of chapter" name="textStructureStanza">
          </div>
          <div class="mb-3">            
            <% if (availableChapters.length > 0) { %>
              <label class="form-label">In chapter</label>
              <% availableChapters.forEach((chapter) => { %>
                <div class="form-check">
                  <input class="form-check-input available-chapters" type="radio" id="chapter-<%= chapter; %>" value="<%= chapter; %>" name="stanzaRefChapter">
                  <label class="form-check-label"><%= chapter; %></label>
                </div>
              <% }); %>
            <% }; %>
          </div>
        </div>
        <!-- submit -->
        <div>
          <button type="submit" class="btn btn-primary">Save</button>
        </div>
      </form>
    </div>
  </div>
  <!-- CHECK -->
  <div class="tab-pane fade" id="check-textStructure" role="tabpanel" aria-labelledby="check-tab">
    <h2 class="mt-3 h5" id="check-annotation"></h2>
    <!-- results textStructure -->
    <div class="textStructure-scroll scroll-tab" id="textStructure-res">
      <%- include ("partials/forms-res/textStructure") %>
    </div>
  </div>
</div>