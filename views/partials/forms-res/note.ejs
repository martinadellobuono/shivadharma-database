<% if (notes) { %>
    <% if (notes.length > 0) { %>
        <% notes.forEach((el) => { %>
            <div class="p-3 mt-3 bg-white container-note" data-type="note" data-subtype="note-entry">
                
                <!-- hidden ID -->
                <span class="d-none" data-type="note" data-subtype="idAnnotation" data-name="idAnnotation" data-fill='<%= el["idAnnotation"]; %>' data-input="text"><%= el["idAnnotation"]; %></span>

                <!-- fragment -->
                <div class="bg-blue mb-3 p-2" data-type="note" data-subtype="selectedFragment" data-name="selectedFragment" data-fill='<%= el["fragment"]; %>' data-input="text"><%- el["fragment"]; %></div>

                <!-- note / location -->
                <div data-type="note" data-subtype="note">
                    <span class="me-1" data-type="location" data-subtype="location-top">
                        <span data-type="note" data-subtype="stanzaStart" data-name="stanzaStart" data-fill='<%= el["stanzaStart"]; %>' data-input="number"><%= el["stanzaStart"]; %></span><span data-type="note" data-subtype="padaStart"><%= el["padaStart"].replace(/,|a\,b\,c\,d\,e\,f|a\,b\,c\,d/g, ""); %></span>
                    </span>
                    <span data-type="note" data-subtype="full-text" data-name="note" data-fill='<%= el["value"]; %>' data-input="textarea"><%- el["value"]; %></span>
                </div>

                <!-- hidden location -->
                <span class="d-none" data-type="note" data-subtype="chapter" data-name="chapter" data-fill='<%= el["chapter"]; %>' data-input="number"></span>
                <span class="d-none" data-type="note" data-subtype="stanzaEnd" data-name="stanzaEnd" data-fill='<%= el["stanzaEnd"]; %>' data-input="number"></span>
                <span class="d-none" data-type="note" data-subtype="padaStart" data-name="padaStart" data-fill='<%= el["padaStart"]; %>' data-input="checkbox"></span>
                <span class="d-none" data-type="note" data-subtype="padaEnd" data-name="padaEnd" data-fill='<%= el["padaEnd"]; %>' data-input="checkbox"></span>

                <!-- modify button -->
                <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-1">
                    <!-- delete -->
                    <button class="btn btn-sm btn-secondary btn-delete btn-close-annotation" type="button" data-delete="note" data-bs-toggle="modal" data-bs-target="#delete-note" data-type="cancel-annotation" data-cancel='#<%= el["idAnnotation"]; %>' data-node-id='<%= el["idAnnotation"]; %>'><i class="bi bi-trash-fill"></i></button>
                    <div class="modal fade delete-modal" id="delete-note" data-role="cancel-annotation" tabindex="-1" aria-labelledby="cancel-translation" aria-hidden="true">
                        <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Are you sure to delete this annotation?</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <p>Please type <b>delete-annotation</b> to confirm.</p>
                                <input type="text" class="form-control" data-role="safe-deletion">
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-primary btn-delete" data-type="cancel-annotation" data-cancel='#<%= el["idAnnotation"]; %>' data-role="safe-deletion-btn" data-node-id='<%= el["idAnnotation"]; %>' disabled>Save changes</button>
                            </div>
                        </div>
                        </div>
                    </div>
                    <!-- modify -->
                    <button class="btn btn-sm btn-blue modify-btn" type="button" data-type="note">Modify</button>
                </div>
            </div>
        <% }); %>
    <% } else { %>
        <!-- no notes -->
        <div class="alert alert-warning fs-xs" role="alert">No notes for now. Let's add a new note!</div>
    <% }; %>
<% }; %>