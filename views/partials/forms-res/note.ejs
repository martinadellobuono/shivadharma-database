<% for (var i = 0; i < notes.length; i++) { %>

<!-- note entry -->
<div class="p-3 mt-3 bg-white container-note" data-type="note" data-subtype="note-entry">

  <!-- stanzas -->
  <% var stanzaStart = notes[i].split("-")[0]; %>
  <% stanzaStart = stanzaStart.split("#")[0]; %>
  <% var stanzaEnd = notes[i].split("-")[1]; %>
  <% stanzaEnd = stanzaEnd.split("#")[0]; %>

  <!-- padas -->
  <% var padaStart = notes[i].split("-")[0]; %>
  <% padaStart = padaStart.split("#")[1]; %>
  <% padaStart = padaStart %>
  <% var padaEnd = notes[i].split("-")[1]; %>
  <% padaEnd = padaEnd.split("___")[0]; %>
  <% padaEnd = padaEnd.split("#")[1]; %>

  <!-- note -->
  <% var note = notes[i].split("___")[1]; %>
  <% note = note.split("===")[0]; %>

  <!-- fragment / chapter -->
  <% var fragment = notes[i].split("___")[1]; %>
  <% var chapter; %>
  <% fragment = fragment.split("===")[1] %>
  <% chapter = fragment.split("/") %>
  <% fragment = chapter[0]; %>
  <% chapter = chapter[1]; %>

  <!-- location -->
  <div class="p-2" data-type="note" data-subtype="location">
    <span class="fw-bold">Chapter</span> <span class="fw-bold" data-type="note" data-subtype="chapter" data-name="chapter" data-fill='<%= chapter %>' data-input="number"><%= chapter %></span> <span class="fst-italic"><span data-type="note" data-subtype="stanza-start" data-name="stanzaStart" data-fill='<%= stanzaStart; %>' data-input="number"><%= stanzaStart; %></span><span data-type="note" data-subtype="pada-start" data-name="padaStart" data-fill='<%= padaStart; %>' data-input="checkbox"><%= padaStart.replace(/,/g, ""); %></span><span data-type="note" data-subtype="stanza-end" data-name="stanzaEnd" data-fill='<%= stanzaEnd; %>' data-input="number"><%= stanzaEnd; %></span><span data-type="note" data-subtype="pada-end" data-name="padaEnd" data-fill='<%= padaEnd; %>' data-input="checkbox"><%= padaEnd.replace(/[#,]/g, ""); %></span></span>
  </div>

  <!-- fragment -->
  <div class="bg-blue p-2" data-type="note" data-subtype="selected-fragment" data-name="selectedFragment" data-fill='<%= fragment; %>' data-input="text"><%= fragment; %></div>

  <!-- note -->
  <div class="p-2" data-type="note" data-subtype="note" data-name="note" data-fill='<%= note; %>' data-input="textarea"><%- note; %></div>

  <!-- modify button -->
  <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-1">
    <button class="btn btn-sm btn-blue modify-btn" type="button" data-type="note">Modify</button>
  </div>

</div>

<% }; %>