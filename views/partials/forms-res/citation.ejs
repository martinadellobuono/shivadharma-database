<% if (citations) { %>
    <% if (citations.length > 0) { %>
        <% citations.forEach((el) => { %>
            <div class="p-3 mt-3 bg-white container-citation" data-type="citation" data-subtype="citation-entry">

                <!-- hidden ID -->
                <span class="d-none" data-type="citation" data-subtype="idAnnotation" data-name="idAnnotation" data-fill='<%= el["idAnnotation"]; %>' data-input="text"><%= el["idAnnotation"]; %></span>

                <!-- fragment -->
                <div class="bg-fuchsia mb-3 p-2" data-type="citation" data-subtype="selectedFragment" data-name="selectedFragment" data-fill='<%= el["fragment"]; %>' data-input="text"><%= el["fragment"]; %></div>

                <!-- location / citation -->
                <div data-type="citation" data-subtype="citation">
                    <span class="me-1" data-type="location" data-subtype="location-top">
                        <span data-type="citation" data-subtype="stanzaStart" data-name="stanzaStart" data-fill='<%= el["stanzaStart"]; %>' data-input="number"><%= el["stanzaStart"]; %></span><span data-type="citation" data-subtype="padaStart" data-name="padaStart" data-fill='<%= el["padaStart"]; %>' data-input="checkbox"><%= el["padaStart"].replace(/,|a\,b\,c\,d\,e\,f|a\,b\,c\,d/g, ""); %></span>
                    </span>
                    <span class="fw-l" data-type="citations" data-subtype="type" data-name="citationType" data-fill='<%= el["value"]; %>' data-input="radio"><%- el["value"]; %></span>
                    <div data-type="citations" data-subtype="note" data-name="noteCitation" data-fill='<%- el["note"]; %>' data-input="textarea"><%- el["note"]; %></div>
                </div>

                <!-- hidden location -->
                <span class="d-none" data-type="citations" data-subtype="chapter" data-name="chapter" data-fill='<%= el["chapter"]; %>' data-input="number"></span>
                <span class="d-none" data-type="citations" data-subtype="stanzaEnd" data-name="stanzaEnd" data-fill='<%= el["stanzaEnd"]; %>' data-input="number"></span>
                <span class="d-none" data-type="citations" data-subtype="padaStart" data-name="padaStart" data-fill='<%= el["padaStart"]; %>' data-input="checkbox"></span>
                <span class="d-none" data-type="citations" data-subtype="padaEnd" data-name="padaEnd" data-fill='<%= el["padaEnd"]; %>' data-input="checkbox"></span>

                <!-- delete / modify button -->
                <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-1">
                    <!-- delete -->
                    <button class="btn btn-sm btn-secondary btn-delete btn-close-annotation" type="button" data-delete="citation" data-bs-toggle="modal" data-bs-target="#delete-citation" data-type="cancel-annotation" data-cancel='#<%= el["idAnnotation"]; %>' data-node-id='<%= el["idAnnotation"]; %>'><i class="bi bi-trash-fill"></i></button>
                    <div class="modal fade delete-modal" id="delete-citation" data-role="cancel-annotation" tabindex="-1" aria-labelledby="cancel-translation" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Are you sure to delete this annotation?</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <p>Please type <b>delete-annotation</b> to confirm.</p>
                                    <input type="text" class="form-control" data-role="safe-deletion">
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                    <button type="button" class="btn btn-primary btn-delete" data-type="cancel-annotation" data-cancel='#<%= el["idAnnotation"]; %>' data-role="safe-deletion-btn" data-node-id='<%= el["idAnnotation"]; %>' disabled>Save changes</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- modify -->
                    <button class="btn btn-sm btn-fuchsia modify-btn" type="button" data-type="citation">Modify</button>
                </div>
            </div>
        <% }); %>
    <% } else { %>
        <!-- no citations -->
        <div class="alert alert-warning fs-xs" role="alert">No citations for now. Let's add a new citation!</div>
    <% }; %>
<% }; %>